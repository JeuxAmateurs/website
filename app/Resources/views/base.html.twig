<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}JeuxAmateurs.fr{% endblock %}</title>
        {% block stylesheets %}
			<link rel="stylesheet" media="screen" type="text/css" href="{{ asset('bootstrap.min.css') }}" />
		{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			Connected as {{ app.user.username }} - <a href="{{ path('fos_user_security_logout') }}">Logout</a>
		{% else %}
			<a href="{{ path('fos_user_security_login') }}">Login</a>
			<a href="{{ path('fos_user_registration_register') }}">Register</a>
		{% endif %}
		<h1><a href="{{ path('ja_site_homepage') }}" title="Back to Home">JeuxAmateurs.fr</a></h1>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
