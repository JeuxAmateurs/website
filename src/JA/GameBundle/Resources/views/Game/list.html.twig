<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Version</th>
            <th>Createdat</th>
            <th>Updatedat</th>
            <th>Platforms</th>
            <th>About</th>
            <th>Download</th>
            <th>Slug</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('game_show', { 'id': entity.id, 'slug': entity.slug }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.version }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.platforms }}</td>
            <td>{{ entity.about }}</td>
            <td>{{ entity.download }}</td>
            <td>{{ entity.slug }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('game_show', { 'id': entity.id, 'slug': entity.slug }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('game_edit', { 'id': entity.id, 'slug': entity.slug }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>