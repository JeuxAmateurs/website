<table class="records_list">
	<thead>
		<tr>
			<th>Id</th>
			<th>Title</th>
			<th>Slug</th>
			<th>Content</th>
			<th>Createdat</th>
			<th>Updatedat</th>
			<th>Games</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
	{% for entity in entities %}
		<tr>
			<td>{{ entity.id }}</td>
			<td>{{ entity.title }}</td>
			<td><a href="{{ path('news_show', { 'slug': entity.slug }) }}">{{ entity.slug }}</a></td>
			<td>{{ entity.content }}</td>
			<td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
			<td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
			<td>
				<ul>
				{% for game in entity.games %}
					<li><a href="{{ path('game_show', {'id' : game.id, 'slug' : game.slug}) }}">{{ game.title }}</a></li>
				{% else %}
					<li>No game here :(.</li>
				{% endfor %}
				</ul>
			</td>
			<td>
				<ul>
					<li>
						<a href="{{ path('news_show', { 'slug': entity.slug }) }}">show</a>
					</li>
					<li>
					{% if is_granted('EDIT', entity) %}
						<a href="{{ path('news_edit', { 'slug': entity.slug }) }}">edit</a>
					{% else %}
						<p>Pas les droits d'&eacute;dition :/</p>
					{% endif %}
					</li>
				</ul>
			</td>
		</tr>
	{% endfor %}
	</tbody>
</table>