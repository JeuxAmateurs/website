{% extends "JANewsBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - New {% endblock %}

{% block content %}
	<h3>News creation</h3>

	<form action="{{ path('news_create') }}" method="post" {{ form_enctype(form) }}>
		{{ form_widget(form) }}
		<p>
			<button type="submit">Create</button>
		</p>
	</form>

	<ul class="record_actions">
		<li>
			<a href="{{ path('news') }}">
				Back to the list
			</a>
		</li>
	</ul>
{% endblock %}